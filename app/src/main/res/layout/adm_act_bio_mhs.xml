<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_600"
    tools:context=".admin.AdminBioMhs">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarBioMhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:onClick="Back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white_smoke" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/pilih_kelas"
                android:textColor="@color/white_smoke"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarBioMhs"
        android:background="@drawable/bg_round_top_history" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieEmpty"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/empty_box" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvKlsMhs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarBioMhs"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        tools:listitem="@layout/list_item_kelas" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_data_mhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarBioMhs"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="34dp"
        app:shimmer_auto_start="true"
        app:shimmer_shape="linear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="23dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="28dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="23dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="28dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="23dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="28dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.9dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="23dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="56dp"
                    android:layout_marginTop="28dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="8dp" />
            </RelativeLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>